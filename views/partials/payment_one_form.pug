.modal.fade#PaymentOne(tabindex="-1" role="dialog" aria-hidden="true")
	.modal-dialog.modal-lg
		.modal-content
			.modal-header
				h5.modal-title One Time Payment
				button.close(type="button" data-dismiss="modal" aria-label="Close")
					span(aria-hidden="true") Ã—
			.modal-body
				form.was-validated#OneTimePayment(name="OneTimePayment" novalidate ng-submit="addPaymentSingle()")
					.row
						.col-lg-6
							label(for="PaymentType") Payment Type
							select#PaymentType.form-control.form-control-sm(required ng-model="selectedPaymentType" ng-options='paymentoption as (paymentoption.PaymentCCNumber ? "****" + paymentoption.PaymentCCNumber : "****" + paymentoption.PaymentCheckAccount) for paymentoption in paymentoptions')
							.invalid-feedback Please select payment type
						.col-lg-6
							label(for="PaymentAmount") Amount
							input#PaymentAmount.form-control.form-control-sm(type="number" min="0.01" step="0.01" required name="PaymentAmount" ng-model="PaymentAmount")
							.invalid-feedback Please enter an amount
					br
					button.btn.btn-primary(ng-disabled="OneTimePayment.$invalid" type="submit") Send
