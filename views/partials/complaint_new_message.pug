.modal.fade#ComplaintThread(tabindex="-1" role="dialog" aria-hidden="true")
	.modal-dialog.modal-lg
		.modal-content
			.modal-header
				h6.modal-title Thread&nbsp;
					small Sorted from newest to oldest comments
				button.close(type="button" data-dismiss="modal" aria-label="Close")
					span(aria-hidden="true") Ã—
			.modal-body
				form.was-validated#NewComplaintMessage(ng-if="!GrievanceMessages.GrievanceStatus" name="NewComplaintMessage" novalidate ng-submit="addNewComplaintMessage()")
					input(type="text" hidden="" name="GrievanceID" id="GrievanceID" ng-model="GrievanceID")
					.row
						.col-lg
							label(for="GrievanceMessage") Message
							textarea#GrievanceMessage.form-control.form-control-sm(rows="3" required ng-model="$parent.GrievanceMessage")
							.invalid-feedback Please enter a message
					br
					button.btn.btn-primary.btn-sm(ng-disabled="NewComplaintMessage.$invalid" type="submit") Send
				hr(ng-if="!GrievanceMessages.GrievanceStatus")
				include complaint_messages.pug